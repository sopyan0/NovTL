
{
  "name": "novtl-desktop",
  "main": "electron/main.js",
  "private": true,
  "version": "3.0.0",
  "type": "commonjs",
  "description": "Professional AI Novel Translator - Desktop & Mobile",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "@capacitor/android": "^5.7.0",
    "@capacitor/core": "^5.7.0",
    "@capacitor/filesystem": "^5.2.0",
    "@google/genai": "^1.35.0",
    "jszip": "^3.10.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.7.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.novtl.studio",
    "productName": "NovTL Studio",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "icon-512.png",
      "icon.png"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
